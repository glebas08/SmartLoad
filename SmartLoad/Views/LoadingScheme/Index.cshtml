@model IEnumerable<SmartLoad.Models.LoadingScheme>

@{
    ViewData["Title"] = "Схемы погрузки";
}

<h1>Схемы погрузки</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать новую схему</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Транспортное средство</th>
            <th>Маршрут</th>
            <th>Дата загрузки</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@(item.Vehicle?.Name ?? "Не указано")</td>
                <td>@(item.Rout?.Name ?? "Не указано")</td>
                <td>@item.LoadingDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Детали</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
