@model IEnumerable<SmartLoad.Models.Product>
@{
    ViewData["Title"] = "Готовая продукция";
}
<h1>Готовая продукция</h1>
<a href="@Url.Action("AddProduct", "Product")" class="btn btn-success">Добавить</a>
<div style="overflow-x: auto; max-height: auto">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-primary">Редактировать</a>
                        <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                        <a asp-controller="PackagingTypes" asp-action="ProductPackaging" asp-route-productId="@item.Id" class="btn btn-info">Типы упаковок</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>