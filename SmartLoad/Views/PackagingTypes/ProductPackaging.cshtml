@model IEnumerable<SmartLoad.Models.PackagingType>
@{
    ViewData["Title"] = "Типы упаковки продукта";
    var productId = ViewBag.ProductId;
    var productName = ViewBag.ProductName;
}

<h1>Типы упаковки для продукта: @productName</h1>

<a href="@Url.Action("AddPackagingToProduct", "PackagingTypes", new { productId })" class="btn btn-success">Добавить тип упаковки</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Наименование</th>
            <th>Масса (кг)</th>
            <th>Длина (м)</th>
            <th>Ширина (м)</th>
            <th>Высота (м)</th>
            <th>Объем (м³)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Weight</td>
                <td>@item.Length</td>
                <td>@item.Width</td>
                <td>@item.Height</td>
                <td>@item.Volume</td>
                <td>
                    <a asp-action="EditPackagingType" asp-route-id="@item.Id" class="btn btn-primary">Редактировать</a>
                    <a asp-action="DeletePackagingType" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>