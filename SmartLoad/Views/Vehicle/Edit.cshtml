    <div class="form-group">
        <label asp-for="Kingpindist"></label>
        <input asp-for="Kingpindist" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OverBeyond"></label>
        <input asp-for="OverBeyond" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>