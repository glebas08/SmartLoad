@model Vehicle

@{
    ViewData["Title"] = "Добавить транспортное средство";
}

<h1>Добавить транспортное средство</h1>

<form asp-action="AddVehicle" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VehicleTypeId" class="control-label"></label>
        <select asp-for="VehicleTypeId" class="form-control" asp-items="ViewBag.VehicleTypeId">
            <option value="">Выберите тип транспортного средства</option>
        </select>
        <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxLoadCapacityTractor" class="control-label"></label>
        <input asp-for="MaxLoadCapacityTractor" class="form-control" />
        <span asp-validation-for="MaxLoadCapacityTractor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxVolumeCapacityTractor" class="control-label"></label>
        <input asp-for="MaxVolumeCapacityTractor" class="form-control" />
        <span asp-validation-for="MaxVolumeCapacityTractor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxLoadCapacityTrailer" class="control-label"></label>
        <input asp-for="MaxLoadCapacityTrailer" class="form-control" />
        <span asp-validation-for="MaxLoadCapacityTrailer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxVolumeCapacityTrailer" class="control-label"></label>
        <input asp-for="MaxVolumeCapacityTrailer" class="form-control" />
        <span asp-validation-for="MaxVolumeCapacityTrailer" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a href="@Url.Action("Vehicles", "Vehicle")" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}