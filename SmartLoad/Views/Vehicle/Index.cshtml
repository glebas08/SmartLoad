@model IEnumerable<SmartLoad.Models.VehicleType>

<h2>Vehicle</h2>

<p>
	<a asp-action="create">Create New</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>Название</th>
			<th>Длина</th>
			<th>Ширина</th>
			<th>Действия</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Length</td>
				<td>@item.Width</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
