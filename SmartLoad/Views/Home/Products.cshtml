@model IEnumerable<SmartLoad.Models.Product>

@{
    ViewData["Title"] = "Готовая продукция";
}

<h1>Готовая продукция</h1>

<a href="@Url.Action("AddProduct", "Home")" class="btn btn-success">Добавить</a>

<div style="overflow-x: auto; max-height: auto">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Масса (кг)</th>
                <th>Объем (м³)</th>
                <th>Длина (м)</th>
                <th>Ширина (м)</th>
                <th>Высота (м)</th>
                <th>Тип упаковки</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Weight</td>
                    <td>@item.Volume</td>
                    <td>@item.Length</td>
                    <td>@item.Width</td>
                    <td>@item.Height</td>
                    <td>@item.PackagingType.Name</td>
                    <td>
                        <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-primary">Редактировать</a>
                        <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>