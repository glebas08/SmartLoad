@model IEnumerable<SmartLoad.Models.Order>

<h1>Заказы</h1>

<a href="@Url.Action("AddOrder", "Home")" class="btn btn-success">Добавить заказ</a>

<div style="overflow-x: auto; max-height: auto">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Дата заказа</th>
                <th>Статус</th>
                <th>Маршрут</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Name</td>
                    <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                    <td>@order.Status</td>
                    <td>@order.Rout?.Name</td>
                    <td>
                        <a asp-action="OrderProducts" asp-route-orderId="@order.Id" class="btn btn-info">Продукты</a>
                        <a asp-action="OrderRoutePoints" asp-route-orderId="@order.Id" class="btn btn-info">Точки маршрута</a>
                        <a asp-action="EditOrder" asp-route-id="@order.Id" class="btn btn-primary">Редактировать</a>
                        <a asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>