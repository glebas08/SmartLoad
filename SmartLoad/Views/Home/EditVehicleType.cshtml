@model SmartLoad.Models.VehicleType

@{
    ViewData["Title"] = "Редактировать ТС";
}

<h1>Редактировать ТС</h1>

<form asp-action="EditVehicleType" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Length" class="control-label"></label>
        <input asp-for="Length" class="form-control" />
        <span asp-validation-for="Length" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Width" class="control-label"></label>
        <input asp-for="Width" class="form-control" />
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Height" class="control-label"></label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxLoadCapacity" class="control-label"></label>
        <input asp-for="MaxLoadCapacity" class="form-control" />
        <span asp-validation-for="MaxLoadCapacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxVolumeCapasity" class="control-label"></label>
        <input asp-for="MaxVolumeCapasity" class="form-control" />
        <span asp-validation-for="MaxVolumeCapasity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AxleCount" class="control-label"></label>
        <input asp-for="AxleCount" class="form-control" />
        <span asp-validation-for="AxleCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxAxleLoad" class="control-label"></label>
        <input asp-for="MaxAxleLoad" class="form-control" />
        <span asp-validation-for="MaxAxleLoad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmptyWeight" class="control-label"></label>
        <input asp-for="EmptyWeight" class="form-control" />
        <span asp-validation-for="EmptyWeight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WheelBase" class="control-label"></label>
        <input asp-for="WheelBase" class="form-control" />
        <span asp-validation-for="WheelBase" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FrontOverhang" class="control-label"></label>
        <input asp-for="FrontOverhang" class="form-control" />
        <span asp-validation-for="FrontOverhang" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RearOverhang" class="control-label"></label>
        <input asp-for="RearOverhang" class="form-control" />
        <span asp-validation-for="RearOverhang" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AllowedRoadTypes" class="control-label"></label>
        <input asp-for="AllowedRoadTypes" class="form-control" />
        <span asp-validation-for="AllowedRoadTypes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes" class="control-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ViewType" class="control-label"></label>
        <input asp-for="ViewType" class="form-control" />
        <span asp-validation-for="ViewType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CouplingDevice" class="control-label"></label>
        <input asp-for="CouplingDevice" class="form-control" />
        <span asp-validation-for="CouplingDevice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Kingpindist" class="control-label"></label>
        <input asp-for="Kingpindist" class="form-control" />
        <span asp-validation-for="Kingpindist" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OverBeyond" class="control-label"></label>
        <input asp-for="OverBeyond" class="form-control" />
        <span asp-validation-for="OverBeyond" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="TypesOfVehicles" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}