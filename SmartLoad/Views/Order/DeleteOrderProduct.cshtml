@model SmartLoad.Models.OrderProduct

@{
    ViewData["Title"] = "Удалить продукт из заказа";
    var orderId = ViewBag.OrderId;
}

<h1>Удалить продукт из заказа</h1>

<h3>Вы уверены, что хотите удалить этот продукт из заказа?</h3>
<div>
    <h4>OrderProduct</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>

    <form asp-action="DeleteOrderProduct" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a href="@Url.Action("OrderProducts", "Order", new { orderId })" class="btn btn-secondary">Отмена</a>
    </form>
</div>