@model SmartLoad.Models.RoutePoint

@{
    ViewData["Title"] = "Редактировать точку разгрузки";
}

<h1>Редактировать точку разгрузки</h1>

<h4>RoutePoint</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRoutePoint">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnloadingDate" class="control-label"></label>
                <input asp-for="UnloadingDate" class="form-control" />
                <span asp-validation-for="UnloadingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RoutePoints">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
