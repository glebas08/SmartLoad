@model IEnumerable<SmartLoad.Models.RoutePoint>

@{
    ViewData["Title"] = "Точки маршрута";
}

<h1>Точки маршрута</h1>

<p>
    <a asp-action="AddRoutePoint" asp-route-orderId="@ViewBag.OrderId" class="btn btn-primary">Добавить точку маршрута</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnloadingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnloadingDate)
                </td>
                <td>
                    <a asp-action="EditRoutePoint" asp-route-id="@item.Id" class="btn btn-warning">Редактировать</a> |
                    <a asp-action="DeleteRoutePoint" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Orders">Назад к списку заказов</a>
</div>
