@model SmartLoad.Models.LoadingProduct

@{
    ViewData["Title"] = "Удалить продукт из схемы погрузки";
    var loadingSchemeId = ViewBag.LoadingSchemeId;
}

<h1>Удалить продукт из схемы погрузки</h1>
<h3>Вы уверены, что хотите удалить этот продукт?</h3>
<div>
    <h4>LoadingProduct</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PositionX)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionX)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PositionY)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionY)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PositionZ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionZ)
        </dd>
    </dl>
    <form asp-action="DeleteLoadingProduct" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a href="@Url.Action("LoadingProducts", "HomeAsp", new { loadingSchemeId })" class="btn btn-secondary">Отмена</a>
    </form>
</div>