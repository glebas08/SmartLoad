@model SmartLoad.Models.LoadingScheme

@{
    ViewData["Title"] = "Редактировать схему погрузки";
}

<h1>Редактировать схему погрузки</h1>

<form asp-action="EditLoadingScheme" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="VehicleTypeId" class="control-label"></label>
        <select asp-for="VehicleTypeId" class="form-control" asp-items="ViewBag.VehicleTypeId">
            <option value="">Выберите тип транспортного средства</option>
        </select>
        <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VehicleId" class="control-label"></label>
        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId">
            <option value="">Выберите транспортное средство</option>
        </select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>
    @* <div class="form-group">
        <label asp-for="RouteId" class="control-label"></label>
        <select asp-for="RouteId" class="form-control" asp-items="ViewBag.RouteId">
            <option value="">Выберите маршрут</option>
        </select>
        <span asp-validation-for="RouteId" class="text-danger"></span>
    </div> *@
    <div class="form-group">
        <label asp-for="LoadingDate" class="control-label"></label>
        <input asp-for="LoadingDate" class="form-control" type="date" />
        <span asp-validation-for="LoadingDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes" class="control-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a href="@Url.Action("LoadingSchemes", "Loading")" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}