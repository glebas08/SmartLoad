@model SmartLoad.Models.LoadingScheme
@{
    ViewData["Title"] = "Удалить схему погрузки";
}

<h1>Удалить схему погрузки</h1>
<h3>Вы уверены, что хотите удалить эту схему погрузки?</h3>
<div>
    <h4>Схема погрузки</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoadingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoadingDate, "{dd.MM.yyyy}")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>

    <form asp-action="DeleteLoadingScheme" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a href="@Url.Action("LoadingSchemes", "Loading")" class="btn btn-secondary">Отмена</a>
    </form>
</div>
